<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.jrecruiter.model.UserRole" table="roles">
        <id name="name" type="java.lang.String" length="55">
            <column name="NAME" not-null="true"/>
            <generator class="assigned"/>
        </id>
        <property name="description"
                  column="DESCRIPTION"
                  type="java.lang.String"
                  length="255"
                  not-null="true"
        />

         <set name="users" inverse="true" table="user_roles">
            <key>
                <column name="role" length="25" not-null="true" />
            </key>
            <many-to-many entity-name="org.jrecruiter.model.User">
                <column name="user_name" length="25" not-null="true" />
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>

