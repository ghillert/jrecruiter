<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.jrecruiter.model.Configuration" table="configuration">
        <id name="key" type="string">
            <column name="message_key" not-null="true"/>
            <generator class="assigned"/>
        </id>
        <property name="text" type="string" length="200">
        	<column name="message_text" />
        </property>
        <property name="lastModified" type="timestamp">
        	<column name="last_modified" length="8" />
        </property>
    </class>
</hibernate-mapping>