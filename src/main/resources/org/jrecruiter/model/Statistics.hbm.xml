<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.jrecruiter.model.Statistics" table="statistics">

        <id name="id" column="JOB_ID" type="long">
            <generator class="foreign">
                <param name="property">job</param>
            </generator>
        </id>
        
        <one-to-one name="job" class="org.jrecruiter.model.Job" constrained="true"/>

     	<property name="counter" type="long">
            <column name="counter" not-null="true" />
        </property>
        <property name="lastAccess" type="timestamp">
            <column name="last_access" length="8" not-null="true" />
        </property>
        <property name="uniqueVisits" type="long">
            <column name="unique_visits" not-null="true" />
        </property>   
    </class>
</hibernate-mapping>