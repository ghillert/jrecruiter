<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.jrecruiter.model.Job" table="jobs">
        <id name="id" type="long" unsaved-value="null">
            <column name="job_id"/>
            <generator class="sequence">
                <param name="sequence">public.jobs_job_id_seq</param>
            </generator>
        </id>
        <many-to-one name="owner" class="org.jrecruiter.model.User" fetch="select"
               not-null="true" cascade="none">
            <column name="user_name" length="25" />
        </many-to-one>
        <property name="businessName" type="string">
          <column name="business_name" length="50" not-null="true" />
        </property>
        <property name="businessLocation" type="string">
          <column name="business_location" length="50" />
        </property>
        <property name="jobTitle" type="string">
          <column name="job_title" length="50" not-null="true" />
        </property>
        <property name="salary" type="double">
            <column name="salary" precision="18" scale="0" />
        </property>
        <property name="description" type="string">
          <column name="description" length="0" not-null="true" />
        </property>
        <property name="website" type="string">
          <column name="web_site" length="50" />
        </property>
        <property name="businessAddress1" type="string">
            <column name="business_address1" length="50" />
        </property>
        <property name="businessAddress2" type="string">
            <column name="business_address2" length="50" />
        </property>
        <property name="businessCity" type="string">
            <column name="business_city" length="30" />
        </property>
        <property name="businessState" type="string">
            <column name="business_state" length="20" />
        </property>
        <property name="businessZip" type="string">
            <column name="business_zip" length="15" />
        </property>
        <property name="businessPhone" type="string">
            <column name="business_phone" length="15" />
        </property>
        <property name="businessEmail" type="string">
            <column name="business_email" length="50" />
        </property>
        <property name="industry" type="string">
            <column name="industry" length="30" />
        </property>
        <property name="jobRestrictions" type="string">
            <column name="job_restrictions" length="0" />
        </property>
        <property name="registerDate" type="timestamp">
            <column name="register_date" length="8" />
        </property>
        <property name="expireDate" type="timestamp">
            <column name="expire_date" length="8" />
        </property>
        <property name="updateDate" type="timestamp">
            <column name="update_date" length="8" />
        </property>
        <property name="status" type="int">
            <column name="status" not-null="true" />
        </property>
        <property name="longitude" type="big_decimal">
            <column name="longitude"/>
        </property>
        <property name="latitude" type="big_decimal">
            <column name="latitude"/>
        </property>

        <one-to-one name="statistics" class="org.jrecruiter.model.Statistics" cascade="all" />
    </class>
</hibernate-mapping>