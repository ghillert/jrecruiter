<?xml version="1.0" encoding="utf-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
  version="1.0">
  <persistence-unit name="base" transaction-type="RESOURCE_LOCAL">
    <class>org.jrecruiter.model.Configuration</class>
    <class>org.jrecruiter.model.Industry</class>
    <class>org.jrecruiter.model.Job</class>
    <class>org.jrecruiter.model.JobType</class>
    <class>org.jrecruiter.model.Region</class>
    <class>org.jrecruiter.model.Role</class>
    <class>org.jrecruiter.model.Statistic</class>
    <class>org.jrecruiter.model.User</class>
    <class>org.jrecruiter.model.UserToRole</class>
    <properties>
      <property name="hibernate.ejb.naming_strategy"
        value="org.jrecruiter.hibernate.ImprovedPluralizedNamingStrategy" />
    </properties>
  </persistence-unit>
</persistence>